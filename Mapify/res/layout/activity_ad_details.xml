<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dip"
    android:background="@drawable/main_bg">
    
	<ImageView android:id="@+id/item_img"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:contentDescription="@string/img_placeholder"/>
	
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="10dip"
	    android:background="@android:color/white">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        	<TextView android:id="@+id/title_field"
	        	    android:layout_width="0dip"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="3"
	        	    android:text="@string/blank"
	        	    style="@style/Headers"/>
	        	
	        	<TextView android:id="@+id/price_field"
	        	    android:layout_width="0dip"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="1"
	        	    android:text="@string/blank"
	        	    style="@style/ListPrice"/>
	        
	    </LinearLayout>
	    
	    <TextView android:id="@+id/details_field"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:text="@string/blank"
	       android:layout_marginTop="3dip"
	       android:layout_marginBottom="2dip"
	       android:maxLines="10"
	       android:minLines="7"/>
	    
	    <TextView android:id="@+id/location_field"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="30dip"
	       android:text="@string/blank"
	       style="@style/ListLocation"/>
	    
	</LinearLayout>
    
    
</LinearLayout>
