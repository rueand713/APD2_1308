<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView android:id="@+id/list_img"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="@string/img_placeholder"/>
    
    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">
        
        <TextView android:id="@+id/list_title"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/blank"
        	style="@style/ListTitle"/>
        
        <TextView android:id="@+id/list_price"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/blank"
        	style="@style/ListPrice"/>
        
        <TextView android:id="@+id/list_location"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/blank"
        	style="@style/ListLocation"/>
        
    </LinearLayout>
    

</LinearLayout>
